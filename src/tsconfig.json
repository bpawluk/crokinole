{
    "compilerOptions": {
        "target": "ES6",
        "outDir": "../wwwroot",
        "lib": [
            "es6",
            "dom"
        ],
        "types": [
            "reflect-metadata"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "**/*",
        "Game.ts",
        "main.ts",
        "babylon.d.ts",
        "babylon.gui.d.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}